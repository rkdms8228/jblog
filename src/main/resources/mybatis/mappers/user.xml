<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<!-- 회원정보 저장(회원가입) -->
	<insert id="join" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values (seq_users_no.nextval, #{id}, #{password}, #{userName}, SYSDATE)
		]]>
	</insert>
	
	<!-- 회원가입 중복 체크 -->
	<select id="joinCheck" parameterType="String" resultType="UserVo">
		<![CDATA[
			select id
			from users
			where id = #{id}
		]]>
	</select>
	
	<!-- 회원정보 가져오기(로그인) -->
	<select id="login" parameterType="com.javaex.vo.UserVo" resultType="UserVo">
		<![CDATA[
			select no
				   , userName
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>

</mapper>